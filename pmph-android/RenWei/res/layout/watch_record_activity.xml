<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dip" >

        <ImageView
            android:id="@+id/back"
            style="@style/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="@string/play_record"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:onClick="showItemDelete"
            android:text="@string/delete"
            android:textColor="@color/text_color_selector"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/title_divider"
        style="@style/horizontal_divider_5dp"
        android:layout_below="@id/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_divider"
        android:orientation="vertical" >

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/play_history_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="@color/color_f2f2f2"
            android:dividerHeight="1dp"
            android:listSelector="#00000000"
            android:scrollbars="none"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrHeaderTextAppearance="@color/color_998d89"
            ptr:ptrListViewExtrasEnabled="false"
            ptr:ptrMode="pullFromEnd"
            ptr:ptrScrollingWhileRefreshingEnabled="true"
            ptr:ptrShowIndicator="false" />

        <View style="@style/horizontal_divider_5dp" />

        <TextView
            android:id="@+id/delete_All"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gridview_item_selector"
            android:clickable="true"
            android:gravity="center"
            android:onClick="confirmDelAll"
            android:padding="8dp"
            android:text="@string/delete_all"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/cache_no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/play_no"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/play_no_prompt"
            android:textColor="@color/color_998d89" />
    </LinearLayout>

</RelativeLayout>